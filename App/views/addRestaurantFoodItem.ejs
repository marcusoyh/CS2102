  <body>
    <h1>Restaurant Staff: <%= title%></h1>
		<form id="html_form" action="addRestaurantFoodItem" role="form" method="post">
			<div class="form-group">
				<label for="cid">Food Item ID:</label>
				<input type="text" class="form-control" id="cid" name="cid" aria-describedby="cid" placeholder="Enter food item ID">
				<small id="matricHelp" class="form-text text-muted">ID Starts from 3</small>
			</div>
			<div class="form-group">
				<label for="foodName">Food Item Name:</label>
				<input type="text" class="form-control" id="foodName" name="foodName" placeholder="Enter the food name">
			</div>
			<div class="form-group">
				<label for="maxOrders">Maximum number of orders:</label>
				<input type="number" class="form-control" id="maxOrders" name="maxOrders" placeholder="Enter number of max orders applicable">
			</div>
			<div class="form-group">
				<label for="price">Price:</label>
				<input type="number" class="form-control" id="price" name="price" placeholder="Enter price">
            </div>
            <div class="form-group">
				<label for="availability">Is this item available now?</label>
                <input type="radio" class="form-control" id="availabilityYes" name="availabilityYes" value="Yes"/> Yes
                <input type="radio" class="form-control" id="availablityNo" name="availablityNo" value="No"> No
            </div>
            <div class="form-group">
				<label for="rid">Enter Restaurant's ID:</label>
				<input type="number" class="form-control" id="rid" name="rid" placeholder="Enter restaurant's ID">
			</div>
			<button type="submit" class="btn btn-primary">Submit</button>
		</form>
		
