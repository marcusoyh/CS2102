    }

    .dropdown-content a {
      color: black;
      padding: 12px 16px;
      text-decoration: none;
      display: block;
      text-align: left;
    }

    .dropdown2-content a {
      color: black;
      padding: 12px 16px;
      text-decoration: none;
      display: block;
      text-align: left;
    }

    .dropdown-content a:hover {background-color: #ddd;}

    .dropdown:hover .dropdown-content {display: block;}

    .dropdown:hover .dropbtn {background-color: #fff4f0;}

    .dropdown2-content a:hover {background-color: #ddd;}

    .dropdown2:hover .dropdown2-content {display: block;}

    .dropdown2:hover .dropbtn2 {background-color: #fff4f0;}

